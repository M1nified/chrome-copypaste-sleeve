{
    "manifest_version": 2,
    "name": "CopyPaste Sleeve",
    "version": "0.1",
    "default_locale": "en",
    "description": "Stores text to be pasted in the future.",
    "background": {
        "scripts": [
            "js/idb.js",
            "js/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "contextMenus",
        "activeTab"
    ],
    "options_page": "options/options.html"
}